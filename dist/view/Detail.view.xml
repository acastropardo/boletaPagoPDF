<mvc:View controllerName="pdf.ZHR_TEST_BOLETA_PAGO.controller.Detail" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic">
	<semantic:DetailPage id="page" navButtonPress="onNavBack" showNavButton="{device>/system/phone}" title="{i18n>detailTitle}"
		busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">
		<semantic:content>
			<ObjectHeader id="objectHeader" title="{Vabrp} - {Vabrj}"></ObjectHeader>
			<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter id="iconTabBarFilter1" icon="sap-icon://hint" tooltip="{i18n>detailIconTabBarInfo}"></IconTabFilter>
					<IconTabFilter id="iconTabBarFilter2" icon="sap-icon://attachment" tooltip="{i18n>detailIconTabBarAttachments}"></IconTabFilter>
				</items>
			</IconTabBar>

			<!--<PDFViewer id="PDFViewer" source="/sap/opu/odata/sap/ZHR_TEST_PDF_SRV/empleadoCollection('30010000')/$value" title="{Vabrp} - {Vabrj}" height="{/Height}">-->
			<!--        <layoutData>-->
			<!--          <FlexItemData growFactor="1" />-->
			<!--        </layoutData>-->
			<!--      </PDFViewer>-->
						<PDFViewer id="PDFViewer"  title="{Vabrp} - {Vabrj}" height="{/Height}">
			        <layoutData>
			          <FlexItemData growFactor="1" />
			        </layoutData>
			      </PDFViewer>
			<Table id="lineItemsList" width="auto" items="{ToPeriodo}" updateFinished="onListUpdateFinished"
				noDataText="{i18n>detailLineItemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
				<headerToolbar>
					<Toolbar id="lineItemsToolbar">
						<Title id="lineItemsHeader" text="{detailView>/lineItemListTitle}"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>detailLineItemTableIDColumn}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
						<Text text="{i18n>detailLineItemTableUnitNumberColumn}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{Vabrp} - {Vabrj}" text="{Seqnr}"/>
							<ObjectNumber/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>
	</semantic:DetailPage>
</mvc:View>